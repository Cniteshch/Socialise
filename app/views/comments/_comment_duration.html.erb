<% if  ((Time.now - comment.created_at) / 1.minutes).to_i < 59 %>
<i class="fa fa-clock-o  btn_right" aria-hidden="true"> <%= ((Time.now - comment.created_at) / 1.minutes).to_i %>  minutes ago</i>
<%  else %>
<% unless  ((Time.now - comment.created_at) / 1.hour).to_i > 23 %>
<i class="fa fa-clock-o  btn_right" aria-hidden="true"> <%= ((Time.now - comment.created_at) / 1.hour).to_i %> hour ago</i>
<%  else %>
<i class="fa fa-clock-o  btn_right" aria-hidden="true"> <%=  comment.created_at.strftime("%B %e, %Y at %I:%M %p") %></i>
<%  end %>
<% end %>